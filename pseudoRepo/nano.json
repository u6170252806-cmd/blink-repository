{
    "name": "nano",
    "version": "8.6",
    "release": 1,
    "description": "GNU nano text editor",
    "author": "GNU Project",
    "license": "GPL-3.0",
    "source": {
        "url": "https://www.nano-editor.org/dist/v8/nano-8.6.tar.xz",
        "sha256": "f7abfbf0eed5f573ab51bd77a458f32d82f9859c55e9689f819d96fe1437a619",
        "type": "tar.xz"
    },
    "dependencies": {
        "bash": ">=3.2",
        "gcc": "*",
        "make": "*",
        "pkg-config": "*",
        "ncurses": ">=6.0"
    },
    "opt_dependencies": [],
    "build": {
        "env": {},
        "prepare": [
            "./configure --prefix=${PREFIX:-/usr/local}"
        ],
        "install": [
            "make -j$(nproc)",
            "make install"
        ],
        "uninstall": [
            "rm -f ${PREFIX:-/usr/local}/bin/nano",
            "rm -rf ${PREFIX:-/usr/local}/share/nano",
            "rm -f ${PREFIX:-/usr/local}/share/man/man1/nano.1"
        ]
    }
}
