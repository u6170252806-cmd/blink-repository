{
    "name": "neofetch",
    "version": "7.1.0",
    "release": 1,
    "description": "Neofetch is a command-line system information tool written in bash 3.2+.",
    "author": "github.com/dylanaraps/neofetch",
    "license": "MIT",
    "source": {
        "url": "https://github.com/dylanaraps/neofetch/archive/refs/tags/7.1.0.tar.gz",
        "sha256": "e610da6561f17c8161337d0c4115da310be576e8699fa2add64e14eeb3f3dcf1",
        "type": "tar.gz"
    },
    "dependencies": {
        "bash": ">=3.2"
    },
    "opt_dependencies": [
        {
            "id": 1,
            "description": "Choose one or more image rendering backend. This enables image display in supported terminals.",
            "options": [
                "w3m-img",
                "iTerm2",
                "Terminology",
                "kitty",
                "libsixel",
                "termpix",
                "pixterm",
                "catimg",
                "jp2a",
                "caca-utils",
                "libcaca"
            ],
            "default": "w3m-img"
        }
    ],
    "build": {
        "env": {
            "MAKEFLAGS": "-j$(nproc)"
        },
        "prepare": [
            "echo 'Preparing build environment...'"
        ],
        "install": [
            "make install PREFIX=${PREFIX:-/usr/local}"
        ],
        "uninstall": [
            "make uninstall PREFIX=${PREFIX:-/usr/local}"
        ]
    }
}